<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_hello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/hello_aston"
            app:layout_constraintEnd_toStartOf="@id/guideline_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/aston_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll" />


    <TextView
        android:id="@+id/tv_title_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:maxLines="3"
        android:text="@string/title_one"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintStart_toEndOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/ll" />

    <TextView
        android:id="@+id/tv_description_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/tv_description_one"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_one" />

    <TextView
        android:id="@+id/tv_title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_two"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:text="@string/description_two"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_two" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_two" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="flow, btn_contacts,btn_gallery,btn_vacancy, tv_title_three" />

    <TextView
        android:id="@+id/tv_title_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_three"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:constraint_referenced_ids="tv_office_moscow,tv_office_kazan,tv_office_rostow, tv_office_minsk,tv_office_gomel"
        app:flow_horizontalStyle="spread"
        app:flow_maxElementsWrap="5"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_three" />

    <TextView
        android:id="@+id/tv_office_moscow"
        style="@style/TextOffices"
        android:text="@string/office_moscow"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/tv_office_kazan"
        style="@style/TextOffices"
        android:text="@string/office_kazan"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/tv_office_rostow"
        style="@style/TextOffices"
        android:text="@string/office_rostow"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/tv_office_minsk"
        style="@style/TextOffices"
        android:text="@string/office_minsk"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/tv_office_gomel"
        style="@style/TextOffices"
        android:text="@string/office_gomel"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="593dp" />


    <Button
        android:id="@+id/btn_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_button_office"
        android:text="@string/contacts"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_description_one"
        app:layout_constraintEnd_toStartOf="@+id/btn_vacancy"
        app:layout_constraintStart_toEndOf="@+id/progress_bar"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_one" />

    <Button
        android:id="@+id/btn_vacancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_button_office"
        android:text="@string/vacancy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_contacts"
        app:layout_constraintEnd_toStartOf="@+id/btn_gallery"
        app:layout_constraintStart_toEndOf="@+id/btn_contacts"
        app:layout_constraintTop_toTopOf="@+id/btn_contacts" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_button_office"
        android:text="@string/gallery"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toEndOf="@+id/btn_vacancy"
        app:layout_constraintTop_toTopOf="@+id/btn_contacts" />

</androidx.constraintlayout.widget.ConstraintLayout>