<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="start|top"
        android:src="@drawable/argentina"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/france" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="end|top"
        android:src="@drawable/germany"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/india"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:src="@drawable/mexico" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/south_korea"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_first_activity"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="start|bottom"
        android:src="@drawable/spain"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/iv_second_activity"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/united_kingdom" />

    <ImageView
        android:id="@+id/iv_third_activity"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/united_states"
        android:layout_marginEnd="2dp"/>

</FrameLayout>