<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_shadow_color">

    <com.example.kirichenko_lessons.ClockView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:hourHandsColor="@color/purple_700"
        custom:minuteHandsColor="@color/teal_700"
        custom:secondHandsColor="@color/second_hands_color"
        custom:hourHandsSize="80dp"
        custom:minuteHandsSize="120dp"
        custom:secondHandsSize="150dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>